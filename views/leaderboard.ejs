<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Mock Test</title>

  <!-- CSS (load bootstrap from a CDN) -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="https://s3.ap-south-1.amazonaws.com/fbmock/mocktestprofile_favicon.jpg" type="image/gif" sizes="16x16">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

  <style>
  .panel{
    max-width: 430px;
    margin: 0 auto 20px;
    border-radius: 8px;
    height:450px;
    overflow-y:scroll;
  }
  .panel form {
    padding: 35px;     
  }
  .panel h3{
    margin: 35px 0 15px 0;
    color: #563d7c;
  }
  .btn-primary {
    color: #fff;
    background-color: #79589f;
    border:none;
  }

  .btn-primary:hover {
    color: #000;
    background-color: #e6e6e6;
    border:none;
  }

  .btn-primary:focus {
    color: #fff;
    background-color: #79589f;
    border:none;
  }

  .form-control:focus {
        border-color: #79589f;
        box-shadow: 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(255, 100, 255, 0.5);
  }

  .amt.active{
    background-color: #79589f;
    color: white;
  }

  .logo-sfdc {
    display: block;
    margin: 100px auto 0px auto;
    width: 100%;
    max-width: 430px;    
    padding: 26.66667px 0;
    text-align: center;
    background: -webkit-linear-gradient(90deg,rgba(255,255,255,0) 0,rgba(255,255,255,0.2) 50%,rgba(255,255,255,0) 100%);
    background: linear-gradient(90deg,rgba(255,255,255,0) 0,rgba(255,255,255,0.2) 50%,rgba(255,255,255,0) 100%);
    background-size: 100% 1px;
    background-repeat: no-repeat;
  }

  .legal {
    list-style: none;
    margin-top: 0px;
    padding: 0;
    text-align: center;
  } 

  .legal li, .legal a {
    font-size: 12px;
    font-weight: bold;
    text-transform: none;
    letter-spacing: 0;
    color: rgba(255,255,255,0.6);
  }

  .legal li {
    display: inline-block;
    margin: 5px;
  }

  </style>
  
</head>
<body style="background-color:#563d7c">

<div class="container">  
  <div class="center-block" style="width:200px;margin-top:30px;">    
      <img src="https://s3.ap-south-1.amazonaws.com/fbmock/mocktestprofile.png" width="200" height="200"/>    
  </div>
  <div class="content">
    <div class="panel">
      <ul class="nav nav-tabs">
        <li id="leaderboard_tab" class="active" style="cursor:pointer"><a>Leaderboard</a></li>
        <li id="winners_tab"  style="cursor:pointer"  ><a>Last Week Winners</a></li>          
      </ul>
      <div id="leaderboard_panel">
        <div style="padding: 10px; height: 300px; overflow-y:scroll;">
          
            <table class="table table-striped">             
            <% top.forEach(function(user) { %>
              <tr>
                 <td><img style="border: 2px solid purple" src="<%= user.profile_pic %>" width="50" height="50" /></td>
                 <td style="padding-top:20px;"><%= user.first_name %></td>
                 <td style="padding-top:20px;"><%= user.score %></td>
              </tr>                
            <% }); %>
            <% me.forEach(function(user) { %>
              <tr style="background-color:#79589f; color: white">
                 <td><img style="border: 2px solid purple"  src="<%= user.profile_pic %>" width="50" height="50" /></td>
                 <td style="padding-top:20px;"><%= user.first_name %></td>
                 <td style="padding-top:20px;"><%= user.score %></td>
              </tr>                
            <% }); %>
            <% down.forEach(function(user) { %>
              <tr>
                 <td><img style="border: 2px solid purple"  src="<%= user.profile_pic %>" width="50" height="50" /></td>
                 <td style="padding-top:20px;"><%= user.first_name %></td>
                 <td style="padding-top:20px;"><%= user.score %></td>
              </tr>                
            <% }); %>              
           </table> 
        </div>       
      </div>
      <div id="winners_panel" style="display:none;">       
      </div>        
    </div>
  </div>

</div> 

<footer class="logo-sfdc">
    <ul class="legal">
      <li><a href="https://fbmocktest.herokuapp.com/terms-and-condition.html">Terms of Service</a></li>
      <li><a href="https://fbmocktest.herokuapp.com/privacy-policy.html">Privacy</a></li><li><a href="https://fbmocktest.herokuapp.com/about-us.html">About Us</a></li>
      <li><a href="https://fbmocktest.herokuapp.com/contact-us.html">Contact Us</a></li>
    </ul>
    <ul class="legal">
        <li>Â© 2017 Kushilav Technical Institute</li>
    </ul>
</footer>
    

</body>

<script type="text/javascript">
  
$(document).ready(function(){

  
  $('#mocktesttab').click(function(event){                  
                  $('#mocktesttab').removeClass('active');
                  $('#paymenttab').removeClass('active');
                  $('#profiletab').removeClass('active');

                  $('#mocktesttab').addClass('active');

                  $('#main_panel').show();
                  $('#payment_panel').hide();
                  $('#profile_panel').hide();
  });


  $('#paymenttab').click(function(event){                  
                  $('#mocktesttab').removeClass('active');
                  $('#paymenttab').removeClass('active');
                  $('#profiletab').removeClass('active');
                  $('#paymenttab').addClass('active');

                  $('#main_panel').hide();
                  $('#payment_panel').show();
                  $('#profile_panel').hide();
  });


  $('#profiletab').click(function(event){                  
                  $('#mocktesttab').removeClass('active');
                  $('#paymenttab').removeClass('active');
                  $('#profiletab').removeClass('active');
                  $('#profiletab').addClass('active');

                  $('#main_panel').hide();
                  $('#payment_panel').hide();
                  $('#profile_panel').show();
  });


                $('#btn25').click(function(event){
                  $('#btn25').removeClass('active');
                  $('#btn50').removeClass('active');
                  $('#btn100').removeClass('active');

                  $('#btn25').addClass('active');

                  $('#amount_display').text('Rs. 25');
                  $('#tests').text(' for 5 tests');
                  $('#amount').val("25");


                });


                $('#btn50').click(function(event){
                  $('#btn25').removeClass('active');
                  $('#btn50').removeClass('active');
                  $('#btn100').removeClass('active');

                  $('#btn50').addClass('active');

                  $('#amount_display').text('Rs. 50');
                  $('#tests').text(' for 10 tests');
                  $('#amount').val("50");


                });

                $('#btn100').click(function(event){
                  $('#btn25').removeClass('active');
                  $('#btn50').removeClass('active');
                  $('#btn100').removeClass('active');

                  $('#btn100').addClass('active');

                  $('#amount_display').text('Rs. 100');
                  $('#tests').text(' for 20 tests');
                  $('#amount').val("100");


                });



});   

</script>



</html>